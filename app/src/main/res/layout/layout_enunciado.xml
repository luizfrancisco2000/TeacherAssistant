<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_weight="1"
android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enunciado"
        android:textSize="18dp"
        /><TextView
        android:id="@+id/DisciplinaEnunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disciplina:"
        android:textSize="18dp"
        />
    <RadioGroup
        android:id="@+id/radioMaterias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radioFisica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Física" />

        <RadioButton
            android:id="@+id/radioQuimica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Química" />

        <RadioButton
            android:id="@+id/radioMatematica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matemática" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assunto:"

        android:textSize="18dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assunto"
        ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de entrada de conteúdo"
        android:textSize="18dp"
        />
    <RadioGroup
        android:id="@+id/radioInsercao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <RadioButton
        android:id="@+id/radioFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto" />
        <RadioButton
            android:id="@+id/radioTeclado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teclado"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/containerForFragment">
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ContinuarProcessoCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        app:backgroundTint="?attr/colorPrimary"
        app:srcCompat="@drawable/ic_menu_send" />


</LinearLayout>
</ScrollView>
