<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Foto de Perfil:"
        android:textSize="18dp"
        />

    <ImageView
        android:id="@+id/fotoProfessor"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fotos" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/nomeProfessor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="Nome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/emailProfessor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="Email" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login:"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/loginProfessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disciplina Ministrada:"
        android:textSize="18dp"
        android:id="@+id/DisciplinaProf"
        />

        <RadioGroup
            android:id="@+id/radioMaterias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/radioFisica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Física" />

            <RadioButton
                android:id="@+id/radioQuimica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Química" />

            <RadioButton
                android:id="@+id/radioMatematica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matemática" />
        </RadioGroup>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="senha"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/senhaProfessor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />

        <Button
            android:id="@+id/confirmar_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar" />
    </LinearLayout>
</LinearLayout>
