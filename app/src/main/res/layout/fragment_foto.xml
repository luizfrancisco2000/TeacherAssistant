<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.Fragments.FotoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <!-- TODO: Update blank fragment layout -->
        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Texto Processado:"
    android:textSize="18dp"
    />
    <WebView
        android:id="@+id/webViewEnun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <Button
        android:id="@+id/fotoEnunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Selecionada: "
        android:textSize="18dp"
        />

    <ImageView
        android:id="@+id/fotoEnunciadoMostra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fotos" />
    </LinearLayout>

</FrameLayout>